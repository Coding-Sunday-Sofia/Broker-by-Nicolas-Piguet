		originx%=80
		originy%=120
		overallwidth%=340
		textheight%=14
		textwidth%=50
		actionwidth%=60
		amountwidth%=75
		cashwidth%=95
		secondpstart%=textwidth%+originx%+actionwidth%+amountwidth%+8
		gfont 10
	endif
	gstyle 33
	guse 1
	gat originx%,originy%
	gprint playername$(1)+":"
	gat originx%,originy%+2
	glineby overallwidth%,0
	gstyle 0
	provnum%=-1
	do
