		giprint ReadRsc$:(finpartie_&)
		goto fin::
	endif
	if firsttimeofturn%=1
		giprint ReadRSc$:(doitjouercarte_&)
		goto fin::
	endif
	if playercash(plyr%)<0
		faillite::
		dinit ReadRsc$:(avert_&)
