proc payerdividendes:
	local provnum%
	do
		provnum%=provnum%+1
		if compsup%(provnum%)<0
			playercash(plyr%)=playercash(plyr%)-20*playerowns(plyr%,provnum%)
			computercash=computercash-computerowns(provnum%)*20
		elseif compsup%(provnum%)>0
			playercash(plyr%)=playercash(plyr%)+compsup%(provnum%)*playerowns(plyr%,provnum%)
			computercash=computercash+compsup%(provnum%)*computerowns(provnum%)
		endif
		compsup%(provnum%)=0
	until provnum%=5
